<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walpaper"
    tools:context=".AddInfoCarActivity">

    <TextView
        android:id="@+id/add_info_action_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/add_info_destination_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Zieladresse"
        app:layout_constraintEnd_toEndOf="@+id/add_info_action_tv"
        app:layout_constraintStart_toStartOf="@+id/add_info_action_tv"
        app:layout_constraintTop_toBottomOf="@+id/add_info_action_tv" />

    <EditText
        android:id="@+id/add_info_date_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Datum"
        app:layout_constraintEnd_toEndOf="@+id/add_info_destination_et"
        app:layout_constraintStart_toStartOf="@+id/add_info_destination_et"
        app:layout_constraintTop_toBottomOf="@+id/add_info_destination_et" />

    <EditText
        android:id="@+id/add_info_temps_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Zeit"
        app:layout_constraintEnd_toEndOf="@+id/add_info_date_et"
        app:layout_constraintStart_toStartOf="@+id/add_info_date_et"
        app:layout_constraintTop_toBottomOf="@+id/add_info_date_et" />
    <EditText
        android:id="@+id/add_info_kilom_d_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Kilometerwert zu Beginn der Reise"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/add_info_temps_et"
        app:layout_constraintStart_toStartOf="@+id/add_info_temps_et"
        app:layout_constraintTop_toBottomOf="@+id/add_info_temps_et" />

    <EditText
        android:id="@+id/add_info_kilom_f_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Kilometerstand am Ende der Reise"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/add_info_kilom_d_et"
        app:layout_constraintStart_toStartOf="@+id/add_info_kilom_d_et"
        app:layout_constraintTop_toBottomOf="@+id/add_info_kilom_d_et" />

    <EditText
        android:id="@+id/add_info_ntrip_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Nummer der Reise "
        app:layout_constraintEnd_toEndOf="@+id/add_info_kilom_f_et"
        app:layout_constraintStart_toStartOf="@+id/add_info_kilom_f_et"
        app:layout_constraintTop_toBottomOf="@+id/add_info_kilom_f_et" />

    <Button
        android:id="@+id/add_info_valider_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="BestÃ¤tigen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>